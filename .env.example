# Context Agent Configuration
# Copy this file to .env and customize as needed

# ====================================
# Agent Settings
# ====================================

# Sensor polling interval in seconds
# How often the agent polls the sensor for state updates
# Default: 5.0
# Valid range: > 0
CONTEXT_AGENT_POLLING_INTERVAL=5.0

# Context usage alert threshold (percentage)
# Agent emits a CONTEXT_THRESHOLD event when usage exceeds this value
# Default: 80
# Valid range: 0-100
CONTEXT_AGENT_CONTEXT_THRESHOLD=80

# Sensor execution timeout in seconds
# Maximum time to wait for sensor script to complete
# Default: 5.0
# Valid range: > 0
CONTEXT_AGENT_SENSOR_TIMEOUT=5.0

# ====================================
# ZeroDB Integration (Optional)
# ====================================

# Enable ZeroDB integration for state persistence and logging
# When enabled, agent state and events will be stored in ZeroDB
# Default: false
# Valid values: true, false, 1, 0, yes, no, on, off
CONTEXT_AGENT_ENABLE_ZERODB=false

# ZeroDB API Key
# Required if ENABLE_ZERODB is true
# Get your API key from: https://zerodb.ainative.studio
CONTEXT_AGENT_ZERODB_API_KEY=

# ZeroDB Project ID
# Required if ENABLE_ZERODB is true
# Get your project ID from: https://zerodb.ainative.studio
CONTEXT_AGENT_ZERODB_PROJECT_ID=

# Enable ZeroDB logging
# When enabled, agent will log detailed events to ZeroDB
# Default: true
# Valid values: true, false, 1, 0, yes, no, on, off
CONTEXT_AGENT_ZERODB_ENABLE_LOGGING=true

# ====================================
# Logging Settings
# ====================================

# Logging level
# Controls verbosity of agent logs
# Default: INFO
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
CONTEXT_AGENT_LOG_LEVEL=INFO

# Log output format
# json: Structured JSON logs (recommended for production)
# text: Human-readable text logs (recommended for development)
# Default: json
# Valid values: json, text
CONTEXT_AGENT_LOG_FORMAT=json

# ====================================
# Usage Examples
# ====================================

# Development setup (verbose logging, no ZeroDB)
# CONTEXT_AGENT_POLLING_INTERVAL=2.0
# CONTEXT_AGENT_LOG_LEVEL=DEBUG
# CONTEXT_AGENT_LOG_FORMAT=text
# CONTEXT_AGENT_ENABLE_ZERODB=false

# Production setup (ZeroDB enabled)
# CONTEXT_AGENT_POLLING_INTERVAL=5.0
# CONTEXT_AGENT_CONTEXT_THRESHOLD=80
# CONTEXT_AGENT_LOG_LEVEL=INFO
# CONTEXT_AGENT_LOG_FORMAT=json
# CONTEXT_AGENT_ENABLE_ZERODB=true
# CONTEXT_AGENT_ZERODB_API_KEY=your_api_key_here
# CONTEXT_AGENT_ZERODB_PROJECT_ID=your_project_id_here

# High-frequency monitoring (fast polling)
# CONTEXT_AGENT_POLLING_INTERVAL=1.0
# CONTEXT_AGENT_SENSOR_TIMEOUT=2.0
# CONTEXT_AGENT_CONTEXT_THRESHOLD=90

# ====================================
# Notes
# ====================================

# 1. Environment variables take highest priority over config files
# 2. All environment variables must be prefixed with CONTEXT_AGENT_
# 3. Boolean values accept: true/false, 1/0, yes/no, on/off (case-insensitive)
# 4. If ZeroDB is enabled but credentials are missing, a warning will be logged
# 5. Invalid values will be logged and defaults will be used instead
